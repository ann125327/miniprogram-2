.gauge-wrap {
  width: 100%;
  height: 500rpx; /* 必须给高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.ec-canvas {
  width: 100%;
  height: 400rpx; /* 画布高度 */
  display: block;
}

.chart-info {
  margin-top: -20rpx; /* 稍微往上提一点，紧凑一些 */
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  display: flex;
  align-items: center;
}