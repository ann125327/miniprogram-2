/* 页面容器 */
.mine-container {
  padding: 40rpx 30rpx;
  padding-bottom: 120rpx; 
}


.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #fcf4daff 1%, #FFD700 100%);
  z-index: -1;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 204, 0, 0.15);
  margin-bottom: 30rpx;
}

.avatar-wrap {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #f7ed55ff; /* 黄色边框 */
}

.avatar {
  width: 100%;
  height: 100%;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border-radius: 50%;
  padding: 4rpx;
}

.user-info {
  margin-left: 29rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #484646ff;
}

.tag {
  font-size: 29rpx;
  color: #ffffffff;
  background-color: rgba(0, 0, 0, 0.1);
  z-index:99;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-top: 6rpx;
  display: inline-block;
}


.statistic-wrap {
  margin-bottom: 30rpx;
}

.core-stat-card {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 0;
  box-shadow: 5rpx 4rpx 16rpx rgba(250, 243, 121, 0.05);
  margin-bottom: 20rpx;
}

.core-item {
  text-align: center;
}

.core-num {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFC107;
  margin-bottom: 8rpx;
}

.core-text {
  font-size: 24rpx;
  color: #666;
}

.core-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: #eee;
}



.func-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 0 30rpx;
  margin-bottom: 16rpx;
  display: block;
}

.func-list {
  border-top: 2rpx solid #f5f5f5;
}

.func-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.func-item:last-child {
  border-bottom: none;
}

.func-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.func-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  color: #999;
}

.version-text {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}


.logout-item {
  background-color: rgba(255, 204, 0, 0.05);
}

.logout-text {
  color: #de4c4cff;
}