.edit-container {
  padding: 30rpx;
  background-color: #f6f4cfff;
  min-height: 100vh;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}


.avatar-edit {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 7rpx 16rpx rgba(0, 0, 0, 0.05);
}

.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #aeaca0ff; 
  margin: 0 auto 30rpx;
}

.avatar-preview image {
  width: 100%;
  height: 100%;
}


.choose-btn {
  width: 100% !important;
  height: 80rpx !important;
  line-height: normal !important; /* 取消之前的 line-height，用 Flex 居中 */
  font-size: 28rpx !important;
  background-color: #fcf6c3ff !important;
  color: #5d5a5aff !important;
  border: 2rpx solid #f5f5f5 !important;
  border-radius: 40rpx !important;
  display: flex !important; 
  align-items: center !important; 
  justify-content: center !important; 
  padding: 0 !important; 
}

.choose-btn::after {
  border: none !important;
}

/* 昵称修改样式 */
.nickname-edit {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.nickname-input {
  border: 2rpx solid #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.nickname-input input {
  font-size: 28rpx;
  color: #333;
}


.save-btn {
  width: 100% !important;
  height: 80rpx !important;
  line-height: normal !important;
  font-size: 28rpx !important;
  background-color: #f2df73ff !important;
  color: #ffffffff !important;
  border-radius: 40rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
}

.save-btn::after {
  border: none !important;
}