.container {
    width: 100%;
    min-height: 100vh;
    background: #f5f5f5;
    padding-top: 0;
    padding-bottom: 0;
  }
  
  .form {
    width: 100%;
    background: white;
    padding: 30rpx 0;
  }
  
  .form-section {
    padding: 0 30rpx 40rpx;
    border-bottom: 1rpx solid #f8f8f8;
  }
  
  .form-section:last-child {
    border-bottom: none;
  }
  
  .section-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 25rpx;
  }
  
  /*日期选择器*/
  .date-picker {
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 25rpx;
    font-size: 30rpx;
    color: #333;
    transition: all 0.3s ease;
  }
  
  .date-picker:active {
    border-color: #07c160;
  }
  
  /*类型选择*/
  .type-selector {
    display: flex;
    border-radius: 12rpx;
    overflow: hidden;
    border: 2rpx solid #e0e0e0;
  }
  
  .type-option {
    flex: 1;
    text-align: center;
    padding: 25rpx;
    background: white;
    color: #666;
    font-size: 30rpx;
    transition: all 0.3s ease;
  }
  
  .type-option.active.expense {
    background: #e54d42;
    color: white;
    border-color: #e54d42;
  }
  
  .type-option.active.income {
    background: #07c160;
    color: white;
    border-color: #07c160;
  }
  
  /*分类网格*/
  .category-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .category-item {
    width: calc(33.333% - 14rpx);
    padding: 25rpx 10rpx;
    text-align: center;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #333;
    transition: all 0.3s ease;
  }
  
  .category-item.active {
    background: #07c160;
    color: white;
    border-color: #07c160;
    transform: scale(0.98);
  }
  
  /*金额输入*/
  .amount-input {
    display: flex;
    align-items: center;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 0 25rpx;
    transition: all 0.3s ease;
  }
  
  .amount-input:focus-within {
    border-color: #07c160;
    box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.1);
  }
  
  .symbol {
    font-size: 40rpx;
    color: #333;
    margin-right: 15rpx;
    font-weight: bold;
  }
  
  .amount-input input {
    flex: 1;
    font-size: 40rpx;
    font-weight: bold;
    padding: 25rpx 0;
  }
  
  /* 备注输入 */
  .note-input {
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 25rpx;
    font-size: 30rpx;
    transition: all 0.3s ease;
  }
  
  .note-input:focus {
    border-color: #07c160;
  }
  
  /*提交按钮*/
  .submit-btn {
    width: calc(100% - 60rpx);
    margin: 40rpx 30rpx 30rpx;
    background: #07c160;
    border-radius: 12rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  }
  
  .submit-text {
    color: white;
    font-size: 34rpx;
    font-weight: bold;
  }
  
  /*添加点击效果*/
  .submit-btn:active {
    background: #06a050;
    transform: scale(0.98);
    box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.4);
  }