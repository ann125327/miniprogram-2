/* 页面背景 */
.visualization-page {
  padding-top: 180rpx;
  padding-bottom: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 顶部固定导航栏  */
.custom-header {
  position: fixed; 
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx; 
  background-color: #FFD300; 
  z-index: 999; 
  display: flex;
  align-items: flex-end; 
  justify-content: center;
  padding-bottom: 25rpx; 
  box-shadow: 0 4rpx 12rpx rgba(255, 211, 0, 0.2); 
}

/* 头部标题文字 */
.header-title {
  color: #333333; 
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/* 图表卡片样式 */
.chart-container {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 24rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 图表标题 */
.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 15rpx;
  border-left: 8rpx solid #FFD300; 
}

/* 筛选区 */
.filter-area {
  margin-top: -100rpx; 
  position: relative;
  z-index: 10;
  padding: 0 20rpx 20rpx 20rpx;
}

.filter-period {
  background-color: #fff;
  padding: 15rpx 35rpx;
  border-radius: 50rpx; 
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: inline-flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 数据卡片样式 */
.data-cards {
  display: flex;
  justify-content: space-around;
  margin: 10rpx 20rpx 30rpx;
}

.card {
  flex: 1;
  background-color: #fff;
  padding: 35rpx 20rpx;
  border-radius: 24rpx; 
  margin: 0 10rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.card .label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.card .amount {
  font-size: 38rpx;
  font-weight: bold;
  /* 默认颜色作为备选 */
  color: #333; 
}



/* 总收入 */
.income .amount {
  color: #4CAF50 !important; 
}

/* 总支出 */
.expense .amount {
  color: #FF6347 !important; 
}

/* 预算输入区域 */
.budget-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;
}

.budget-input-box {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

/* 保存按钮 */
.save-btn {
  background-color: #FFD300 !important; 
  color: #333333 !important;
  font-weight: bold;
  border-radius: 40rpx; 
  padding: 0 45rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  margin: 0;
  border: none;
}

/* 空状态样式 */
.empty-chart {
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fdfdfd; 
  border: 2rpx dashed #eee; 
  border-radius: 24rpx;
}