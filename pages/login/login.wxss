
.login-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1; 
  object-fit: cover;
}
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 44px); 
  padding: 0 40rpx;
    position: relative;

}

.avatar-wrapper {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20%;  
  overflow: hidden;  
  border: 4rpx solid #f1f081; 
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); 
  margin-bottom: 40rpx;
  position:relative;
}


.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 80rpx;
}


.privacy-agree {
  display: flex;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 60rpx;
}


.agree-checkbox {
  transform: scale(0.8); 
  margin-right: 12rpx;
  z-index: 999;

}



.privacy-text {
    font-size: 28rpx;
    color: #666666; 
    line-height: 1.5;
    display: flex; 
    align-items: center;

  }
  

  .privacy-link {
    color: #c7c422 !important; 
    margin: 0 4rpx;
    text-decoration: underline; 
    text-decoration: none; 
  }
  

  .privacy-link::after {
    display: none;
  }
 button.login-btn {
  width: 100% !important;
  font-size: 32rpx !important;
  padding: 20rpx 0 !important;
  border: none !important;
  border-radius: 10rpx !important; 
  line-height: normal !important;
}


button.login-btn:not([disabled]) {
  background-color: #d8a80c !important; 
  color: #ffffff !important; 
}


button.login-btn[disabled] {
  background-color: #cccccc !important; 
  color: #ffffff !important;
}


button.login-btn::after {
  border: none !important;
}
.auth-tip {
  margin-top: 30rpx;
  font-size: 22rpx;
  color: #ff4d4f;
}