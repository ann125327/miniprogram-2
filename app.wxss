
/* 全局页面基础样式：适配所有页面 */
page {
  margin: 0;
  padding: 0;
  font-size: 28rpx; 
  color: #333333;   
  background-color: #f5f5f5; 
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}

/* 全局按钮样式：统一按钮圆角 */
button {
  border-radius: 80rpx !important;  
}

/** 通用容器样式 **/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
